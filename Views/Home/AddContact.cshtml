@{
    ViewData["Title"] = "AddContact";
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center mt-xl-5">
        <div class="col-md-4">
            <div class="rounded p-4 shadow-sm mb-4 bg-primary-color text-lightblue">
                <form>
                    <h1 class="text-center mb-4">Add a contact</h1>
                    <div class="mb-3">
                        <label for="cFirstName" class="form-label">First Name</label>
                        <input type="text" class="form-control bg-secondary-color text-lightblue" id="cFirstName" placeholder="Enter first name" required />
                    </div>
                    <div class="mb-3">
                        <label for="cMiddleName" class="form-label">Middle Name</label>
                        <input type="text" class="form-control bg-secondary-color text-lightblue" id="cMiddleName" placeholder="Enter middle name" required />
                    </div>
                    <div class="mb-3">
                        <label for="cLastName" class="form-label">Last Name</label>
                        <input type="text" class="form-control bg-secondary-color text-lightblue" id="cLastName" placeholder="Enter last name" required />
                    </div>
                    <div class="mb-3">
                        <label for="cSex" class="form-label">Sex</label>
                        <select class="form-select bg-secondary-color text-lightblue" id="cSex" required>
                            <option value="" disabled selected>Select sex</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="cCivilStatus" class="form-label">Civil Status</label>
                        <select class="form-select bg-secondary-color text-lightblue" id="cCivilStatus" required>
                            <option value="" disabled selected>Select civil status</option>
                            <option value="Single">Single</option>
                            <option value="Married">Married</option>
                            <option value="Divorced">Divorced</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="cBirthYear" class="form-label">Birth Year</label>
                        <input type="number" class="form-control bg-secondary-color text-lightblue" id="cBirthYear" placeholder="Enter birth year" required />
                    </div>
                    <div class="mb-3">
                        <label for="cBirthMonth" class="form-label">Birth Month</label>
                        <select class="form-select bg-secondary-color text-lightblue" id="cBirthMonth" required>
                            <option value="" disabled selected>Select birth month</option>
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="cBirthDay" class="form-label">Birth Day</label>
                        <input type="number" class="form-control bg-secondary-color text-lightblue" id="cBirthDay" placeholder="Enter birth day" required />
                    </div>
                    <div class="mb-3">
                        <label for="cAddress" class="form-label">Address</label>
                        <input type="text" class="form-control bg-secondary-color text-lightblue" id="cAddress" placeholder="Enter address" required />
                    </div>
                    <div class="mb-3">
                        <label for="cPhone" class="form-label">Phone Number</label>
                        <input type="number" class="form-control bg-secondary-color text-lightblue" id="cPhone" placeholder="Enter phone number" required />
                    </div>
                    <div class="mb-3">
                        <label for="cEmail" class="form-label">Email address</label>
                        <input type="email" class="form-control bg-secondary-color text-lightblue" id="cEmail" placeholder="Enter email" required />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block" id="addContactBtn">Add this contact</button>
                </form>
            </div>
        </div>
    </div>
</div>
