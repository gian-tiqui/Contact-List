@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid">
    <form>
        <div class="row justify-content-center align-items-center mt-xl-5">
            <div class="col-md-4">
                <div class="rounded p-4 shadow-sm mb-4 bg-primary-color text-lightblue">
                    <h2 class="text-center mb-4">Register</h2>
                    <div class="mb-1">
                        <label for="rUsername" class="form-label text-lightblue">Username</label>
                        <input type="text" class="form-control bg-secondary-color text-lightblue" id="rUsername" placeholder="Enter username" required />
                    </div>
                    <div class="mb-1">
                        <label for="firstName" class="form-label text-lightblue">First Name</label>
                        <input type="text" class="form-control bg-secondary-color text-lightblue" id="firstName" placeholder="Enter first name" required />
                    </div>
                    <div class="mb-1">
                        <label for="middleName" class="form-label text-lightblue">Middle Name</label>
                        <input type="text" class="form-control bg-secondary-color text-lightblue" id="middleName" placeholder="Enter middle name" required />
                    </div>
                    <div class="mb-1">
                        <label for="lastName" class="form-label text-lightblue">Last Name</label>
                        <input type="text" class="form-control bg-secondary-color text-lightblue" id="lastName" placeholder="Enter last name" required />
                    </div>
                    <div class="mb-1">
                        <label for="phone" class="form-label text-lightblue">Phone Number</label>
                        <input type="number" class="form-control bg-secondary-color text-lightblue" id="phone" placeholder="Enter phone number" required />
                    </div>
                    <div class="mb-1">
                        <label for="birthYear" class="form-label text-lightblue">Birth Year</label>
                        <input type="number" class="form-control bg-secondary-color text-lightblue" id="birthYear" placeholder="Enter birth year" required />
                    </div>
                    <div class="mb-1">
                        <label for="birthMonth" class="form-label text-lightblue">Birth Month</label>
                        <select class="form-select bg-secondary-color text-lightblue" id="birthMonth" required>
                            <option value="" disabled selected>Select birth month</option>
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                    <div class="mb-1">
                        <label for="birthDay" class="form-label text-lightblue">Birth Day</label>
                        <input type="number" class="form-control bg-secondary-color text-lightblue" id="birthDay" placeholder="Enter birth day" required />
                    </div>
                    <div class="mb-1">
                        <label for="sex" class="form-label text-lightblue">Sex</label>
                        <select class="form-select bg-secondary-color text-lightblue" id="sex" required>
                            <option value="" disabled selected>Select sex</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                    <div class="mb-1">
                        <label for="address" class="form-label text-lightblue">Address</label>
                        <input type="text" class="form-control bg-secondary-color text-lightblue" id="address" placeholder="Enter address" required />
                    </div>
                    <div class="mb-1">
                        <label for="civilStatus" class="form-label text-lightblue">Civil Status</label>
                        <select class="form-select bg-secondary-color text-lightblue" id="civilStatus" required>
                            <option value="" disabled selected>Select civil status</option>
                            <option value="Single">Single</option>
                            <option value="Married">Married</option>
                            <option value="Divorced">Divorced</option>
                        </select>
                    </div>
                    <div class="mb-1">
                        <label for="rEmail" class="form-label text-lightblue">Email address</label>
                        <input type="email" class="form-control bg-secondary-color text-lightblue" id="rEmail" placeholder="Enter email" required />
                    </div>
                    <div class="mb-1">
                        <label for="rPassword" class="form-label text-lightblue">Password</label>
                        <input type="password" class="form-control bg-secondary-color text-lightblue" id="rPassword" placeholder="Enter password" required />
                    </div>
                    <div class="mb-1">
                        <label for="cPassword" class="form-label text-lightblue">Confirm Password</label>
                        <input type="password" class="form-control bg-secondary-color text-lightblue" id="cPassword" placeholder="Confirm password" required />
                    </div>
                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-sm fw-bold bg-lightblue text-dark btn-block mb-1 col-12" id="registerBtn">Sign Up</button>
                        <div class="d-flex justify-content-center align-items-center">
                            <hr class="my-3" style="width: 40%; background-color: #ced4da;" />
                            <div class="mx-2">or</div>
                            <hr class="my-3" style="width: 40%; background-color: #ced4da;" />
                        </div>
                        <button type="button" class="btn btn-sm fw-bold btn-secondary btn-block col-12" id="gotoLogin">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>